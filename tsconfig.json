{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "moduleResolution": "node",
        "sourceMap": true,
        "removeComments": true,
        "noImplicitAny": true,
        "noEmitOnError": true,
        "rootDir": "src",
        "outDir": "dist",
        "lib": [
            "es6"
        ],
        "declaration": true,
        "baseUrl": "./"
    },
    "exclude": [
        "./index.ts",
        "./index.d.ts",
        "node_modules",
        "sandbox"
    ]
}
